<%= form_for customer do |customer| %>

    <div class="field form-group">
      <%= customer.label :name, 'Name' %>
      <%= customer.text_field :name, :class => "form-control",
                             placeholder: 'Name von Kunde eingeben' %>
    </div>

    <div class="actions form-group">
      <% if context %>
          <%= customer.submit 'Erstellen', class: "btn btn-success", data: { disable_with: "Verarbeite..." }  %>
      <% else %>
          <%= customer.submit 'Update', class: "btn btn-success", data: { disable_with: "Verarbeite..." }  %>
      <% end %>
    </div>

<% end %>