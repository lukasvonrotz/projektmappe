<h1>Info editieren</h1>
<% if @info.errors.any? %>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= @info.errors.full_messages.first %>
    </div>
<% end %>

<% subproject = Subproject.find(@info.subproject_id) %>
<% project = subproject.project %>

<%= render 'form', :info => @info,
           :subprojectid => @info.subproject_id,
           :context => false  %>

<%= link_to "Zurück zu Projektübersicht", project_subproject_path(project.id, subproject.id) %>

<%= render 'layouts/loading', :message => "Lade..." %>