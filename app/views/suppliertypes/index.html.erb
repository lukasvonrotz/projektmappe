<h1>Alle Lieferantentypen</h1>
<br>
<a href="<%=new_suppliertype_path%>" class="btn btn-success">Neuen Lieferantentypen erstellen</a>
<br><br><br>
<div id="content" class="table-responsive">
  <table id="suppliertype_table" class="table table-striped table-bordered data_table" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Aktionen</th>
    </tr>
    </thead>
    <tbody>
    <% @suppliertypes.each do |suppliertype| %>
        <tr>
          <td><%= suppliertype.id %></td>
          <td><%= suppliertype.name %></td>

          <td>
            <a href="<%= suppliertype_path(suppliertype.id) %>" class="btn btn-xs btn-default btn-index">Info</a>
            <a href="<%= edit_suppliertype_path(suppliertype.id) %>" class="btn btn-xs btn-info btn-index">Bearbeiten</a>
            <button type="button" class="btn btn-xs btn-danger btn-index"
                    data-toggle="modal" data-target="#popup_sure_delete"
                    data-itemid="<%= suppliertype.id %>"
                    data-model="suppliertypes">
              Lieferantentyp l√∂schen
            </button>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= render 'layouts/loading', :message => "Lade Lieferantentypen..." %>
<%= render 'layouts/popups' %>