<%= form_for [supplier, electrical_installation_supplier] do |electrical_installation_supplier| %>
    <div class="row" style="margin-bottom: 10px;">
      <div class="col-lg-5">
        <strong class="hidden-lg">Kennung<br></strong>
        <%= electrical_installation_supplier_kennung %></br>
        <strong class="hidden-lg"><br></strong>
      </div>
      <div class="col-lg-2">
        <strong class="hidden-lg">Bruttopreis (CHF)<br></strong>
        <%= electrical_installation_supplier.text_field :brutto,
                                                        :required => true,
                                                        :class => "form-control electrical_installation_supplier_fld electrical_installation_supplier" + electrical_installation_supplierid.to_s + "_fld" %>
        <strong class="hidden-lg"><br></strong>
      </div>
      <div class="col-lg-2">
        <strong class="hidden-lg">Rabatt<br></strong>
        <%= electrical_installation_supplier.text_field :rabatt,
                                                        :required => true,
                                                        :class => "form-control electrical_installation_supplier_fld electrical_installation_supplier" + electrical_installation_supplierid.to_s + "_fld" %>
        <strong class="hidden-lg"><br></strong>
      </div>
      <div class="col-lg-3" style="line-height: 30px;">
        <a class="btn btn-sm btn-info electrical_installation_supplier_edit electrical_installation_supplier<%=electrical_installation_supplierid.to_s%>_edit"
           onclick="editLine(<%=electrical_installation_supplierid%>);">Edit</a>
        <%= electrical_installation_supplier.submit 'Update',
                                     class: "btn btn-sm btn-success electrical_installation_supplier_fld electrical_installation_supplier" + electrical_installation_supplierid.to_s + "_fld",
                                     data: { disable_with: "Verarbeite..." }  %>
        <strong class="hidden-lg"><br><br><br><br></strong>
      </div>
    </div>
<% end %>