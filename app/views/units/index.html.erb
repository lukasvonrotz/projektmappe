<h1>Alle Units</h1>
<br>
<a href="<%=new_unit_path%>" class="btn btn-success">Neue Unit erstellen</a>
<br><br><br>
<div id="content" class="table-responsive">
  <table id="unit_table" class="table table-striped table-bordered data_table" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Projekte</th>
      <th>Aktionen</th>
    </tr>
    </thead>
    <tbody>
      <% @units.each do |unit| %>
        <tr>
          <td><%= unit.id %></td>
          <td><a href="<%= unit_path(unit.id) %>"><%= unit.name %></a></td>
          <td>
            <a href="<%= unit_path(unit.id) %>" class="btn btn-xs btn-default btn-index">Info</a>
            <a href="<%= edit_unit_path(unit.id) %>" class="btn btn-xs btn-info btn-index">Bearbeiten</a>
            <button type="button" class="btn btn-xs btn-danger btn-index"
                    data-toggle="modal" data-target="#popup_sure_delete"
                    data-itemid="<%= unit.id %>"
                    data-model="units">
              Unit l√∂schen
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'layouts/loading', :message => "Lade Units..." %>
<%= render 'layouts/popups' %>