<h1>Neuen Lieferanten erstellen</h1>
<% if @supplier.errors.any? %>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= @supplier.errors.full_messages.first %>
    </div>
<% end %>

<% if Suppliertype.any? %>
  <%= render 'form', :supplier => @supplier, :context => true  %>
<% else %>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      Mindestens 2 Lieferantentypen mit Name "Kabel" und "Kabelbeschriftung" müssen in der Datenbank existieren.
    </div>
<% end %>
<%= link_to "Zurück zu Lieferantenübersicht", suppliers_path %>