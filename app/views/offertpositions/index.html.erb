<h1>Alle Offertpositionen von Version <%= @subsubproject.name %></h1>
<br>
<a href="<%=new_project_subproject_subsubproject_offertposition_path%>" class="btn btn-success">Neue Offertposition erstellen</a>
<br><br><br>
<div id="content" class="table-responsive">
  <table class="table table-striped table-bordered data_table" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Aktionen</th>
    </tr>
    </thead>
    <tbody>
    <% @offertpositions.each do |offertposition| %>
        <tr>
          <td><%= offertposition.id %></td>
          <td><%= offertposition.name %></td>

          <td>
            <a href="<%= edit_project_subproject_subsubproject_offertposition_path(offertposition.subsubproject.subproject.project.id, offertposition.subsubproject.subproject.id, offertposition.subsubproject.id, offertposition.id) %>" class="btn btn-xs btn-info btn-index">Bearbeiten</a>
            <button type="button" class="btn btn-xs btn-danger btn-index"
                    data-toggle="modal" data-target="#popup_sure_delete"
                    data-itemid="<%= offertposition.id %>"
                    data-model="offertpositions">
              Offertposition l√∂schen
            </button>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= render 'layouts/loading', :message => "Lade Offertpositionen..." %>
<%= render 'layouts/popups' %>