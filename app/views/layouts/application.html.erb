<!DOCTYPE html>
<html>
  <head>
    <title>Projektmappe</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>
    <%= render 'layouts/navigation' %>
    <div class="container" style="width: 100%;">
      <div class="row">
        <div class="col-lg-12">
          <% if notice %>
              <div class="alert alert-info fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= notice %>
              </div>
          <% end %>

          <% if alert %>
              <div class="alert alert-danger fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= alert %>
              </div>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>
    <footer style="height: 100px; background-color: white; margin-top: 50px;"></footer>


    <script>
      $(document).ready(function() {
        $('.data_table').DataTable({
            "scrollX": true,
            "pageLength": 50,
            "language": {
                "decimal":        "",
                "emptyTable":     "Keine Einträge gefunden",
                "info":           "Zeige _START_ bis _END_ von _TOTAL_ Einträgen",
                "infoEmpty":      "Zeige 0 bis 0 von 0 Einträgen",
                "infoFiltered":   "(gefiltert aus total _MAX_ Einträgen)",
                "lengthMenu":     "Zeige _MENU_ Einträge",
                "loadingRecords": "Lade Daten",
                "processing":     "Verarbeite...",
                "search":         "Suche",
                "zeroRecords":    "0 Einträge",
                "paginate": {
                    "first":      "Erster",
                    "last":       "Letzter",
                    "next":       "Nächste",
                    "previous":   "Vorherige"
                }
            }});
      });
    </script>
  </body>
</html>
