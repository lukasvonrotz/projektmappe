<h1>Alle Kabellieferanten</h1>
<br>
<a href="<%=new_wiresupplier_path%>" class="btn btn-success">Neuen Kabellieferanten erstellen</a>
<br><br><br>
<div id="content" class="table-responsive">
  <table id="wiresupplier_table" class="table table-striped table-bordered data_table" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Aktionen</th>
    </tr>
    </thead>
    <tbody>
    <% @wiresuppliers.each do |wiresupplier| %>
        <tr>
          <td><%= wiresupplier.id %></td>
          <td><%= wiresupplier.name %></td>
          <td>
            <a href="<%= wiresupplier_path(wiresupplier.id) %>" class="btn btn-xs btn-default btn-index">Info</a>
            <a href="<%= edit_wiresupplier_path(wiresupplier.id) %>" class="btn btn-xs btn-info btn-index">Bearbeiten</a>
            <a href="<%= wiresupplier_wire_wiresuppliers_path(wiresupplier.id) %>" class="btn btn-xs btn-info btn-index">Kabelpreise bearbeiten</a>
            <button type="button" class="btn btn-xs btn-danger btn-index"
                    data-toggle="modal" data-target="#popup_sure_delete"
                    data-itemid="<%= wiresupplier.id %>"
                    data-model="wiresuppliers">
              Kabellieferant l√∂schen
            </button>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= render 'layouts/loading', :message => "Lade Kabellieferanten..." %>
<%= render 'layouts/popups' %>