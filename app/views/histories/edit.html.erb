<h1>History-Eintrag editieren</h1>
<% if @history.errors.any? %>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= @history.errors.full_messages.first %>
    </div>
<% end %>

<% subproject = Subproject.find(@history.subproject_id) %>
<% project = subproject.project %>

<%= render 'form', :history => @history,
           :subprojectid => @history.subproject_id,
           :context => false  %>

<%= link_to "Zurück zu Projektübersicht", project_subproject_path(project.id, subproject.id) %>

<%= render 'layouts/loading', :message => "Lade..." %>