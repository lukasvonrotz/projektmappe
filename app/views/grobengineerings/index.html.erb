<h1>Grobengineering</h1>
<br>
<a href="<%=new_grobengineering_path%>" class="btn btn-success">Neuen Eintrag erstellen</a>
<br><br><br>
<div id="content" class="table-responsive">
  <table class="table table-striped table-bordered data_table" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>ID</th>
      <th>Offertposition</th>
      <th>Beschreibung</th>
      <th>Kommentar</th>
      <th>Aktionen</th>
    </tr>
    </thead>
    <tbody>
    <% @grobengineerings.each do |grobengineering| %>
        <tr>
          <td><%= grobengineering.id %></td>
          <td><%= grobengineering.offertposition %></td>
          <td><%= grobengineering.beschreibung %></td>
          <td><%= grobengineering.kommentar %></td>

          <td>
            <a href="<%= grobengineering_path(grobengineering.id) %>" class="btn btn-xs btn-default btn-index">Info</a>
            <a href="<%= edit_grobengineering_path(grobengineering.id) %>" class="btn btn-xs btn-info btn-index">Bearbeiten</a>
            <button type="button" class="btn btn-xs btn-danger btn-index"
                    data-toggle="modal" data-target="#popup_sure_delete"
                    data-itemid="<%= grobengineering.id %>"
                    data-model="grobengineerings">
              Eintrag löschen
            </button>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= render 'layouts/loading', :message => "Lade Grobingeneering-Einträge..." %>
<%= render 'layouts/popups' %>