<h1>Alle Versionen</h1>
<br>
<a href="<%=new_project_subproject_subsubproject_path%>" class="btn btn-success">Neue Version erstellen</a>
<br><br><br>
<div id="content" class="table-responsive">
  <table id="subsubproject_table" class="table table-striped table-bordered data_table" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Aktionen</th>
    </tr>
    </thead>
    <tbody>
      <% @subsubprojects.each do |subsubproject| %>
        <tr>
          <td><%= subsubproject.id %></td>
          <td><a href="<%= project_subproject_subsubproject_path(subsubproject.subproject.project.id, subsubproject.subproject.id, subsubproject.id) %>"><%= subsubproject.name %></a></td>
          <td>
            <a href="<%= project_subproject_subsubproject_path(subsubproject.subproject.project.id, subsubproject.subproject.id, subsubproject.id) %>" class="btn btn-xs btn-default btn-index">Info</a>
            <a href="<%= edit_project_subproject_subsubproject_path(subsubproject.subproject.project.id, subsubproject.subproject.id, subsubproject.id) %>" class="btn btn-xs btn-info btn-index">Bearbeiten</a>
            <button type="button" class="btn btn-xs btn-danger btn-index"
                    data-toggle="modal" data-target="#popup_sure_delete"
                    data-itemid="<%= subsubproject.id %>"
                    data-model="subsubprojects">
              Version l√∂schen
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'layouts/loading', :message => "Lade Versionen..." %>
<%= render 'layouts/popups' %>