<h1>Neuen Schaltgerätekombination erstellen</h1>
<% if @switchgearcombination.errors.any? %>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= @switchgearcombination.errors.full_messages.first %>
    </div>
<% end %>

<% if Switchgear.where(["typ = ?", "1"]).any? %>
    <%= render 'form', :switchgearcombination => @switchgearcombination,
               :switchgearid => @switchgearcombination.switchgear_id.nil? ? 24 : @switchgearcombination.switchgear_id,
               :context => true  %>
    <%= link_to "Zurück zu Schaltgerätekombinationen-Übersicht", switchgearcombinations_path %>
<% else %>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        Es existiert kein Eintrag mit dem Typ (Schaltgerätetyp) in der Datenbank (Schaltanlagenbau)!
    </div>
<% end %>