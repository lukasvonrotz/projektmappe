<div class="half-screen col-lg-6 col-md-12">
  <h2><%= t('.change_your_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <% if devise_error_messages!.to_s != '' %>
          <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= devise_error_messages! %>
          </div>
      <% end %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field form-group">
        <%
          if @minimum_password_length
            new_pw_title = 'Neues Passwort (mindestens ' + @minimum_password_length.to_s + ' Zeichen)'
          else
            new_pw_title = 'Neues Passwort'
          end
        %>
        <%= f.label :password, new_pw_title %><br />
        <%= f.password_field :password, {autofocus: "true", autocomplete: "off", class:"form-control"} %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
        <%= f.password_field :password_confirmation, {autocomplete: "off", class:"form-control"} %>
      </div>

      <div class="actions">
        <%= f.submit t('.change_my_password'), {class:"btn btn-success"} %>
      </div>
  <% end %>
  <br />
  <%= render "users/shared/links" %>
</div>
