<h1>Alle Benutzer</h1>
<% if @users.nil? %>
    No users in database.
<% else %>
    <div id="contentf" class="table-responsive">
      <table id="user_table" class="table table-striped table-bordered data_table" cellspacing="0" width="100%">
        <thead>
        <tr>
          <th>E-Mail</th>
          <th>Aktionen</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td>
                <button type="button" class="btn btn-xs btn-danger btn-index"
                        data-toggle="modal" data-target="#popup_sure_delete"
                        data-itemid="<%= user.id %>"
                        data-model="users">
                  Benutzer l√∂schen
                </button>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<% end %>

<%= render 'layouts/loading', :message => "Lade Benutzer..." %>
<%= render 'layouts/popups' %>
