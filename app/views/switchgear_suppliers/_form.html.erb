<%= form_for [supplier, switchgear_supplier] do |switchgear_supplier| %>
    <div class="row" style="margin-bottom: 10px;">
      <div class="col-lg-5">
        <strong class="hidden-lg">Kennung<br></strong>
        <%= switchgear_supplier_kennung %></br>
        <strong class="hidden-lg"><br></strong>
      </div>
      <div class="col-lg-2">
        <strong class="hidden-lg">Bruttopreis (CHF)<br></strong>
        <%= switchgear_supplier.text_field :brutto,
                                      :required => true,
                                      :class => "form-control switchgear_supplier_fld switchgear_supplier" + switchgear_supplierid.to_s + "_fld" %>
        <strong class="hidden-lg"><br></strong>
      </div>
      <div class="col-lg-2">
        <strong class="hidden-lg">Rabatt<br></strong>
        <%= switchgear_supplier.text_field :rabatt,
                                      :required => true,
                                      :class => "form-control switchgear_supplier_fld switchgear_supplier" + switchgear_supplierid.to_s + "_fld" %>
        <strong class="hidden-lg"><br></strong>
      </div>
      <div class="col-lg-3" style="line-height: 30px;">
        <a class="btn btn-sm btn-info switchgear_supplier_edit switchgear_supplier<%=switchgear_supplierid.to_s%>_edit"
           onclick="editLine(<%=switchgear_supplierid%>);">Edit</a>
        <%= switchgear_supplier.submit 'Update',
                                  class: "btn btn-sm btn-success switchgear_supplier_fld switchgear_supplier" + switchgear_supplierid.to_s + "_fld",
                                  data: { disable_with: "Verarbeite..." }  %>
        <strong class="hidden-lg"><br><br><br><br></strong>
      </div>
    </div>
<% end %>